name: "{{NAME}}"

on:
  workflow_dispatch: {}

permissions:
  contents: write

jobs:
  run:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - run: {{COMMAND}}
      - run: |
          git config user.name "sce-bot"
          git config user.email "sce-bot@users.noreply.github.com"
          git add -A
          git commit -m "{{COMMIT_MSG}}" || echo "No changes"
          git push
